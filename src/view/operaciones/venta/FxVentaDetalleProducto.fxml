      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" style="-fx-padding: 0.8333333333333334em; -fx-border-color: #999999; -fx-border-width: 0px 0px 1px 0px;">
               <children>
                  <Label fx:id="lblProducto" alignment="CENTER" prefWidth="680.0" styleClass="labelRobotoBold18" text="Producto" textAlignment="CENTER" textFill="#0771d3" wrapText="true" />
