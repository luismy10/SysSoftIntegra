                                      </columns>
                                    </TableView>
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="PAGO CON:" textFill="#020203" />
                                          <Label fx:id="lblPago" styleClass="labelRoboto13" text="0.00" textFill="#020203" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_RIGHT" style="-fx-spacing: 0.5em;" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="labelRobotoBold13" text="TOTAL:" textFill="#020203" />
                                          <Label fx:id="lblTotal" styleClass="labelRobotoBold15" text="0.00" textFill="#020203" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Button fx:id="btnCancelarVenta" mnemonicParsing="false" onAction="#onActionCancelar" onKeyPressed="#onKeyPressedCancelar" styleClass="buttonLight" text="Cancelar Venta">
                                             <graphic>
                                                <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../../image/cancel.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#onActionImprimir" onKeyPressed="#onKeyPressedImprimir" styleClass="buttonLight" text="Imprimir copia">
                                             <graphic>
                                                <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../../image/print.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
