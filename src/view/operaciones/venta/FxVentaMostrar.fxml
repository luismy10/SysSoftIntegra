                                    <TableColumn fx:id="tcDocumento" prefWidth="140.0" style="-fx-alignment: CENTER-LEFT;" text="Documento" />
                                    <TableColumn fx:id="tcFechaHora" prefWidth="139.0" style="-fx-alignment: CENTER-LEFT;" text="Fecha y Hora" />
                                    <TableColumn fx:id="tcTotal" prefWidth="138.0" style="-fx-alignment: CENTER-RIGHT;" text="Total" />
                                </columns>
                              </TableView>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label contentDisplay="RIGHT" styleClass="labelRoboto13" text="Para ver el datelle de la venta tiene que hacer doble click a la tabla o enter " textFill="#020203">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../image/arrow.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox style="-fx-spacing: 0.8333333333333334em; -fx-padding: 0.8333333333333334em  0.8333333333333334em  0.8333333333333334em 0em;" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox style="-fx-spacing: 0.8333333333333334em; -fx-padding: 0.8333333333333334em; -fx-border-color: #999999;" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox style="-fx-spacing: 0.6666666666666666em;">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="Cliente:" textFill="#020203" />
                                          <Label fx:id="lblCliente" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="Comprobante y Numeración:" textFill="#020203" />
                                          <Label fx:id="lblComprobante" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="Tipo de venta y Estado: " textFill="#020203" />
                                          <Label fx:id="lblTipo" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                          <Label styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                          <Label fx:id="lblEstado" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="Observación:" textFill="#020203" />
                                          <Label fx:id="lblObservaciones" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.5em;">
                                       <children>
                                          <Label styleClass="labelRoboto13" text="Vendedor" textFill="#020203" />
                                          <Label fx:id="lblVendedor" styleClass="labelRoboto13" text="-" textFill="#0771d3" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <HBox fx:id="hbContenidoTabla" VBox.vgrow="ALWAYS">
                                 <children>
                                    <TableView fx:id="tvDetalleVenta" prefHeight="300.0" prefWidth="560.0" styleClass="table-view-secundario" HBox.hgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="tcCantidad" prefWidth="90.0" style="-fx-alignment: CENTER-LEFT;" text="Cant." />
                                        <TableColumn fx:id="tcDescripcion" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT;" text="Descripción" />
                                          <TableColumn fx:id="tcPrecio" prefWidth="115.0" style="-fx-alignment: CENTER-RIGHT;" text="Precio" />
                                          <TableColumn fx:id="tcDescuento" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Desc." />
