                                                      <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../image/bullets.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    <TextField fx:id="txtSearch" onKeyReleased="#onKeyReleasedSearch" styleClass="text-field-normal" VBox.vgrow="ALWAYS" />
