                        <HBox VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="tvVentas" onKeyPressed="#onKeyPressedTvVentas" onMouseClicked="#onMouseClickedTvVentas" prefHeight="280.0" prefWidth="620.0" styleClass="table-view-secundario" HBox.hgrow="ALWAYS">
