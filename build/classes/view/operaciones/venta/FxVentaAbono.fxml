                        <VBox>
                           <children>
                              <TableView fx:id="tvList" prefHeight="260.0" styleClass="table-view-principal">
                                 <columns>
                                    <TableColumn fx:id="tcFecha" prefWidth="220.0" style="-fx-alignment: CENTER-LEFT;" text="Fecha de abono" />
                                    <TableColumn fx:id="tcMonto" prefWidth="145.0" style="-fx-alignment: CENTER-RIGHT;" text="Monto" />
                                    <TableColumn fx:id="tcReferencia" prefWidth="305.0" style="-fx-alignment: CENTER-LEFT;" text="Referencia" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" style="-fx-padding: 0.8333333333333334em; -fx-spacing: 0.8333333333333334em;">
               <children>
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#onActionCancelar" onKeyPressed="#onKeyPressedCancelar" styleClass="buttonLight" text="Cancelar">
                     <graphic>
                        <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/cancel.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onActionAbono" onKeyPressed="#onKeyPressedAbono" styleClass="buttonLightDefault" text="Abono">
