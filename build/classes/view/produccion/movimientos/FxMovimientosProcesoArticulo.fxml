                                          <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" styleClass="labelRoboto14" text="Observación:" GridPane.rowIndex="2" />
                                          <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.8333333333333334em;" GridPane.columnIndex="1">
                                             <children>
                                                <RadioButton fx:id="rbIncremento" mnemonicParsing="false" onAction="#onActionTipo" onKeyPressed="#onKeyPressedTipo" prefHeight="30.0" styleClass="labelRoboto14" text="Incremento">
                                                   <graphic>
                                                      <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../image/plus.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </RadioButton>
                                                <RadioButton fx:id="rbDecremento" mnemonicParsing="false" onAction="#onActionTipo" onKeyPressed="#onKeyPressedTipo" prefHeight="30.0" selected="true" styleClass="labelRoboto14" text="Decremento">
                                                   <graphic>
                                                      <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../image/remove-item.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </RadioButton>
                                             </children>
                                          </HBox>
                                          <ComboBox fx:id="cbAjuste" prefHeight="30.0" prefWidth="260.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                          <TextField fx:id="txtObservacion" prefHeight="30.0" prefWidth="260.0" styleClass="text-field-normal" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                          <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" styleClass="labelRoboto14" text="Proveedor involucrado:" GridPane.columnIndex="2" />
                                          <HBox style="-fx-spacing: 0.6666666666666666em;" GridPane.columnIndex="3">
                                             <children>
                                                <TextField fx:id="txtProveedor" disable="true" maxHeight="1.7976931348623157E308" prefHeight="30.0" styleClass="text-field-normal" HBox.hgrow="ALWAYS" />
                                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onActionProveedor" onKeyPressed="#onKeyPressedProveedor" prefHeight="30.0" styleClass="buttonBorder">
                                                   <graphic>
                                                      <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../image/providers.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                             </children>
                                          </HBox>
                                          <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" styleClass="labelOpenSansRegular14" text="Estado del Movimeinto:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                          <HBox alignment="CENTER_LEFT" style="-fx-spacing: 0.8333333333333334em;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                             <children>
                                                <RadioButton fx:id="rbCompletado" mnemonicParsing="false" selected="true" styleClass="labelOpenSansRegular14" text="Completado" />
                                                <RadioButton fx:id="rbProceso" mnemonicParsing="false" styleClass="labelOpenSansRegular14" text="En Proceso" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="tvList" fixedCellSize="-0.0" prefHeight="327.0" styleClass="table-view-principal" HBox.hgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="tcClave" prefWidth="257.0" style="-fx-alignment: CENTER-LEFT;" text="Clave/Nombre" />
                                    <TableColumn fx:id="tcCantidad" prefWidth="173.0" style="-fx-alignment: CENTER-RIGHT;" text="Cantidad" />
                                    <TableColumn fx:id="tcCosto" prefWidth="153.0" style="-fx-alignment: CENTER-RIGHT;" text="Costo" />
                                    <TableColumn fx:id="tcPrecio" prefWidth="166.0" style="-fx-alignment: CENTER-RIGHT;" text="Precio" />
                                    <TableColumn fx:id="tcMovimiento" prefWidth="169.0" style="-fx-alignment: CENTER-LEFT;" text="Movimiento" />
                                    <TableColumn fx:id="tcOpcion" prefWidth="169.0" style="-fx-alignment: CENTER;" text="Opcion" />
                                 </columns>
                              </TableView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
